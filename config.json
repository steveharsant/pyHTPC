{
  "general" : {
    "name" : "thea",
    "tag_line" : "Just keep watching...",
    "show_name" : "false",
    "show_tag_line" : "false",
    "font" : "Raleway",
    "hide_mouse" : "true",
    "show_page_name" : "true",
    "show_search_bar" : "true"
  },
  "startup": {
    "browser": "msedge",
    "kiosk_mode": "true",
    "install_directory" : "C:/applications/thea/",
    "force_venv" : "true",
    "update_on_start" : "true"
  },
  "settings": [{
      "name": "Sound",
      "location": "/settings/sound",
      "command": "start ms-settings:sound"
  },
  {
      "name": "Bluetooth",
      "location": "/settings/bluetooth",
      "command": "start ms-settings:bluetooth"
  },
  {
      "name": "Display",
      "location": "/settings/display",
      "command": "start ms-settings:display"
  }],
  "theme": {
    "active_theme": "default"
  },
  "tiles": {
    "show_names": "false",
    "show_catagory_icon": "true"
  },
  "utilities": {
    "show_names": "false",
    "power_commands" : {
          "linux" : {
            "restart" : "bash -c 'init 6'",
            "shutdown" : "bash -c 'init 0'"
          },
          "windows" : {
            "restart" : "shutdown -r -t 0",
            "shutdown" : "shutdown -s -t 0"
          }
        }
  }
}
